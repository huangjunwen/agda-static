#!/bin/bash

# Relative path wrapper

BIN_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
SHARE_DIR=$( realpath $BIN_DIR/../share )
ETC_DIR=$( realpath $BIN_DIR/../etc )

export Agda_datadir=$SHARE_DIR/agda/data
export AGDA_DIR=$ETC_DIR/agda

exec $BIN_DIR/agda.static "$@"

