#!/usr/bin/env bash

# Find directories
SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)
OPT_DIR=$(realpath $SCRIPT_DIR/..)
BIN_DIR=$(realpath $OPT_DIR/../bin)
SHR_DIR=$(realpath $OPT_DIR/../share)
ETC_DIR=$(realpath $OPT_DIR/../etc)
DATA_DIR=$SHR_DIR/agda/data
LIBS_DIR=$SHR_DIR/agda/libs
APP_DIR=$ETC_DIR/agda

# Find file paths
LIBRARIES_FILE_PATH=$APP_DIR/libraries
DEFAULTS_FILE_PATH=$APP_DIR/defaults
